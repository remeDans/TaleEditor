<Window x:Class="TaleEditor.wndMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:gif="http://wpfanimatedgif.codeplex.com" 
        xmlns:local="clr-namespace:TaleEditor"
        mc:Ignorable="d"
        Title="Tale Editor" WindowStartupLocation="Manual" StateChanged="Window_StateChanged" Loaded="Window_Loaded" MinWidth="800" MinHeight="570" Width="800" Height="570" Background="{x:Null}" Icon="Iconos/icon.ico" Closing="Window_Closing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="93*"/>
            <ColumnDefinition Width="494*"/>
            <ColumnDefinition Width="205*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*" />
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <!--#region Menu-->

        <Menu  Grid.Row="0" IsEnabled="True" IsMainMenu="True" Grid.ColumnSpan="3">
            <MenuItem Header="Archivo" IsEnabled="True">
                <MenuItem x:Name="menuNewTale" Header="Nuevo" Click="menuNewTale_Click">
                    <MenuItem.Icon>
                        <Image Source="Iconos/mnew.png"/>
                    </MenuItem.Icon>
                </MenuItem>
                <!--Command="New"-->
                <MenuItem x:Name="menuOpenTale" Header="Abrir" Click="menuOpenTale_Click">
                    <MenuItem.Icon>
                        <Image Source="Iconos/mopen.png"/>
                    </MenuItem.Icon>
                </MenuItem>
                <!--Command="Open"-->
                <Separator/>
                <MenuItem x:Name="menuSaveTale" Header="Guardar" IsEnabled="False" Click="btnSaveTale_Click">
                    <MenuItem.Icon>
                        <Image Source="Iconos/msave.png"/>
                    </MenuItem.Icon>
                </MenuItem>
                <!--Command="Save"-->
                <MenuItem x:Name="menuSaveAsTale" Header="Guardar como..." IsEnabled="False" Click="menuSaveAsTale_Click" />
                <Separator/>
                <MenuItem x:Name="menuImportTale" Header="Importar cuento" Click="menuImportTale_Click">
                    <MenuItem.Icon>
                        <Image Source="Iconos/mimp.png"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem x:Name="menuExportTale" Header="Exportar cuento" IsEnabled="False" Click="menuExportTale_Click">
                    <MenuItem.Icon>
                        <Image Source="Iconos/mexp.png"/>
                    </MenuItem.Icon>
                </MenuItem>
                <!--<MenuItem x:Name="menuExportTaleAndroid" Header="Exportar cuento para Android" IsEnabled="False" Click="menuExportTaleAndroid_Click">
                    <MenuItem.Icon>
                        <Image Source="Iconos/mexp.png"/>
                    </MenuItem.Icon>
                </MenuItem>-->
                <Separator/>
                <MenuItem x:Name="menuCloseTale" Header="Cerrar cuento" IsEnabled="False" Click="menuCloseTale_Click"  />
                <Separator/>
                <MenuItem x:Name="menuExit" Header="Salir" IsEnabled="True" Click="menuExit_Click">
                    <MenuItem.Icon>
                        <Image Source="Iconos/mexit.png"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>

            <!--<MenuItem Header="Configuración" >
                <MenuItem Header="Idioma"/>
                <MenuItem Header="Tamaño"/>
            </MenuItem>-->
            <!--<MenuItem Header="Ver" />-->
            <MenuItem Header="Ayuda" >
                <MenuItem x:Name="menuShowHelp" Header="Manual" Click="menuShowHelp_Click">
                    <MenuItem.Icon>
                            <Image Source="Iconos/mhelp.png"/>
                        </MenuItem.Icon>
                </MenuItem>
                <MenuItem x:Name="menuAbout" Header="Acerca de ..." Click="menuAbout_Click" />
            </MenuItem>
        </Menu>
        <!--#endregion-->

        <Border Grid.Row="1" BorderThickness="0,1,0,1" BorderBrush="DarkGray" Margin="0,0,0,0" Padding="0,0,0,0" Grid.ColumnSpan="3" >
            <Grid>
                <ToolBarTray Grid.Row="1"  Background="WhiteSmoke">
                    <ToolBar Background="WhiteSmoke" IsHitTestVisible="True">
                        <Button x:Name="btnNewTaleQuick" Padding="1,0,0,0" Margin="0" Width="20" Height="20" Background="Transparent"  BorderThickness="0" VerticalContentAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" HorizontalAlignment="Center" ToolTip="Nuevo" Click="menuNewTale_Click" >
                            <Image x:Name="imgNewTaleQuick" Source="iconos/mnew.png" Margin="2" VerticalAlignment="Center" HorizontalAlignment="Center" Stretch="UniformToFill" />
                        </Button>
                        <Button x:Name="btnOpenFileQuick" Padding="0,0,0,1" Margin="0" Width="20" Height="20" Background="Transparent"  BorderThickness="0" VerticalContentAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" HorizontalAlignment="Center" ToolTip="Abrir" Click="menuOpenTale_Click" >
                            <Image x:Name="imgOpenFileQuick" Source="iconos/mopen.png" Margin="2" VerticalAlignment="Center" HorizontalAlignment="Center" Stretch="UniformToFill"/>
                        </Button>
                        <Button x:Name="btnQuickSave" Padding="0,0,0,0" Margin="0" Width="20" Height="20" Background="Transparent"  BorderThickness="0" VerticalContentAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" HorizontalAlignment="Center" ToolTip="Guardar" IsEnabled="False" Click="btnSaveTale_Click" >
                            <Image x:Name="imgQuickSave" Source="iconos/msaveOff.png" Margin="2" VerticalAlignment="Center" HorizontalAlignment="Center" Stretch="UniformToFill" />
                        </Button>
                    </ToolBar>
                    <ToolBar x:Name="toolBarPages" Background="WhiteSmoke" Visibility="Collapsed">
                        <!--<Label Content="Página: "/>-->
                        <Button x:Name="btnQuickAddPage" Padding="0,0,0,0" Margin="0" Width="20" Height="20" Background="Transparent"  BorderThickness="0" VerticalContentAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" HorizontalAlignment="Center" ToolTip="Añadir página" IsEnabled="False" Click="btnAddPage_Click"  >
                            <Image x:Name="imgQuickAddPage" Source="iconos/maddOff.png" Margin="2" VerticalAlignment="Center" HorizontalAlignment="Center" Stretch="UniformToFill" />
                        </Button>
                        <Button x:Name="btnQuickDeletePage" Padding="0,0,0,0" Margin="0" Width="20" Height="20" Background="Transparent"  BorderThickness="0" VerticalContentAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" HorizontalAlignment="Center" ToolTip="Eliminar página" IsEnabled="False" Click="btnDeletePage_Click"   >
                            <Image x:Name="imgQuickDeletePage" Source="iconos/msubOff.png" Margin="2" VerticalAlignment="Center" HorizontalAlignment="Center" Stretch="UniformToFill" />
                        </Button>
                    </ToolBar>
                </ToolBarTray>
            </Grid>
        </Border>

        <Grid x:Name="grdStart" Grid.Row="2" Background="WhiteSmoke" Grid.ColumnSpan="3">
            <Image x:Name="imgStart" Source="Iconos/logo.png" Stretch="Uniform" StretchDirection="Both" />
        </Grid>

        <Grid x:Name="grdWorkSpace" Grid.Row="2" Grid.ColumnSpan="3"  >

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.35*" MinWidth="276"/>
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="0.65*" MinWidth="513"/>
            </Grid.ColumnDefinitions>


            <Grid x:Name="grdPanel" Grid.Column="0">
                <!-- Region brdTitlePanel -->
                <Border x:Name="brdTitlePanel" Background="WhiteSmoke" Visibility="Collapsed">
                    <Grid >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="35" />
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="10"/>
                        </Grid.ColumnDefinitions>




                        <Grid Grid.Row="0" Grid.Column="0" Background="#E5E7E9" Grid.ColumnSpan="3"  >
                            <Border  BorderThickness="1" BorderBrush="DarkGray" >
                                <Label  Content="Portada" Padding="0" Margin="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="16" />
                            </Border>
                        </Grid>


                        <!--<Separator Grid.Row="1" Grid.Column="0" BorderThickness="1" BorderBrush="DarkGray" Grid.ColumnSpan="3"/>-->

                        <Grid Grid.Row="2" Grid.Column="1" Margin="0,10,0,10" >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" MinWidth="105"/>
                                <ColumnDefinition Width="*" MinWidth="110"/>
                            </Grid.ColumnDefinitions>


                            <Label x:Name="lblTitle" Grid.Row="0" Grid.Column="0" Padding="0" Content="Titulo:" Margin="0,2" HorizontalContentAlignment="Left" HorizontalAlignment="Left" VerticalAlignment="Center" VerticalContentAlignment="Center" Height="20" />
                            <TextBox x:Name="txtTitle" Grid.Row="0" Grid.Column="1" Height="20" HorizontalAlignment="Stretch" MouseLeave="txtTitle_MouseLeave" KeyDown="txtTitle_KeyDown" KeyUp="txtTitle_KeyUp"/>

                            <!--<Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" MinWidth="105"/>
                                    <ColumnDefinition Width="*" MinWidth="110"/>
                                    <ColumnDefinition Width="25"/>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0" Content="Fuente: " Padding="0" Margin="0,2" HorizontalContentAlignment="Left" HorizontalAlignment="Left" VerticalAlignment="Center" VerticalContentAlignment="Center" Height="20"/>
                                <TextBox Grid.Column="1" Height="20" IsEnabled="False" /> 
                                <Button x:Name="btnFontFrontPage" Grid.Column="2" Content="..." Margin="2,0,0,0" Width="20" VerticalAlignment="Center" Click="btnFontFrontPage_Click"  />
                            </Grid>

                            <Separator Grid.Row="2" Grid.Column="0" BorderThickness="1" BorderBrush="DarkGray" Grid.ColumnSpan="3" Margin="0,3,0,3"/>-->

                            <Label x:Name="lblLanguage" Grid.Row="3" Grid.Column="0" Padding="0" Content="Lenguaje:" Margin="0,2" HorizontalContentAlignment="Left" HorizontalAlignment="Left" VerticalAlignment="Center" VerticalContentAlignment="Center" Height="20"/>
                            <TextBox x:Name="txtLanguage" Grid.Row="3" Grid.Column="1" IsEnabled="False" Height="20" MouseLeave="txtLanguage_MouseLeave" KeyDown="txtLanguage_KeyDown"/>

                            <Label x:Name="lblAuthor" Grid.Row="4" Grid.Column="0" Padding="0" Content="Autor:" Margin="0,2" HorizontalContentAlignment="Left" HorizontalAlignment="Left" VerticalAlignment="Center" VerticalContentAlignment="Center" Height="20"/>
                            <TextBox x:Name="txtAuthor" Grid.Row="4" Grid.Column="1" VerticalAlignment="Center" MouseLeave="txtAuthor_MouseLeave" KeyDown="txtAuthor_KeyDown" />

                            <Label x:Name="lblUrl" Grid.Row="5" Grid.Column="0" Padding="0" Content="Url:" Margin="0,2" HorizontalContentAlignment="Left" HorizontalAlignment="Left" VerticalAlignment="Center" VerticalContentAlignment="Center" Height="20"/>
                            <TextBox x:Name="txtUrl" Grid.Row="5" Grid.Column="1" Height="20" VerticalAlignment="Center" MouseLeave="txtUrl_MouseLeave" KeyDown="txtUrl_KeyDown"/>

                            <Label x:Name="lblLicense" Grid.Row="6" Grid.Column="0" Padding="0" Content="Licencia:" Margin="0,2"  HorizontalContentAlignment="Left" HorizontalAlignment="Left" VerticalAlignment="Center" VerticalContentAlignment="Center" Height="20" />
                            <TextBox x:Name="txtLicense" Grid.Row="6" Grid.Column="1" Height="20" VerticalAlignment="Center" MouseLeave="txtLicense_MouseLeave" KeyDown="txtLicense_KeyDown" />

                            <Label x:Name="lblDateOfCreation" Grid.Row="7" Grid.Column="0" Padding="0" Content="Fecha de creacion:" Margin="0,2" HorizontalContentAlignment="Left" HorizontalAlignment="Left" VerticalAlignment="Center" VerticalContentAlignment="Center" Height="20"/>
                            <TextBox x:Name="txtDateOfCreation" Grid.Row="7" Grid.Column="1" Height="20" VerticalAlignment="Center" IsEnabled="False" MouseLeave="txtDateOfCreation_MouseLeave" KeyDown="txtDateOfCreation_KeyDown" />

                        </Grid>

                        <Separator Grid.Row="3" Grid.Column="1" BorderThickness="1" BorderBrush="DarkGray"/>

                        <Grid Grid.Row="4" Grid.Column="1" Margin="0,10,0,10" >

                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="105" />
                                <ColumnDefinition Width="*"  MinWidth="110"/>
                                <ColumnDefinition Width="25" />
                            </Grid.ColumnDefinitions>

                            <Label x:Name="lblBackground" Grid.Row="0" Grid.Column="0" Padding="0" Content="Fondo:" Margin="0,0,0,0" HorizontalContentAlignment="Left" HorizontalAlignment="Left" VerticalAlignment="Center" VerticalContentAlignment="Center" Height="20"/>

                            <RadioButton x:Name="rdbImageFrontPage" Grid.Row="1" Grid.Column="0" GroupName="grpBackgroundTale" Content="Imagen" Margin="20,5,5,5" HorizontalAlignment="Left" VerticalAlignment="Center" Checked="rdbImageFrontPage_Checked" />
                            <RadioButton x:Name="rdbColorFrontPage" Grid.Row="2" Grid.Column="0" GroupName="grpBackgroundTale" Content="Color" Margin="20,5,0,5" HorizontalAlignment="Left" VerticalAlignment="Center" Checked="rdbColorFrontPage_Checked"/>

                            <TextBox  x:Name="txtBackgroundImageFrontPage" Grid.Row="1" Grid.Column="1" Margin="5,0,3,0" Height="20" VerticalAlignment="Center" IsEnabled="False" />

                            <Button x:Name ="btnBackgroundImageFrontPage" Grid.Row="1" Grid.Column="2" Height="20" Content="..."  Margin="2,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" Width="20" IsEnabled="False" Click="btnBackgroundImageFrontPage_Click" />

                            <TextBox  x:Name="txtBackgroundColorFrontPage" Grid.Row="2" Grid.Column="1" Margin="5,0,3,0" Height="20" VerticalAlignment="Center" IsEnabled="False" />

                            <Button x:Name ="btnBackgroundColorFrontPage" Grid.Row="2" Grid.Column="2" Height="20" Content="..."  Margin="2,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" Width="20" IsEnabled="False" Click="btnBackgroundColorFrontPage_Click"  />

                        </Grid>




                        <Separator Grid.Row="5" Grid.Column="1" BorderThickness="1" BorderBrush="DarkGray" />


                        <Grid Grid.Row="6" Grid.Column="1" Margin="0,10,0,10">

                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="105" />
                                <!--<ColumnDefinition Width="15" />-->
                                <ColumnDefinition Width="*"  MinWidth="100"/>
                                <ColumnDefinition Width="25" />
                            </Grid.ColumnDefinitions>

                            <Label x:Name="lblMusic" Grid.Row="0" Grid.Column="0" Padding="0" Content="Música:" Margin="0,2" HorizontalContentAlignment="Left" HorizontalAlignment="Left" VerticalAlignment="Center" VerticalContentAlignment="Center" Height="20"/>
                            <TextBox  x:Name="txtMusicFrontPage" Grid.Row="0" Grid.Column="1" Margin="5,0,3,0" Height="20" VerticalAlignment="Center" IsEnabled="False" />
                            <Button  x:Name="btnMusicFrontPage" Grid.Row="0" Grid.Column="2" Height="20" Content="..."  Margin="2,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left" Width="20" IsEnabled="False" Click="btnMusicFrontPage_Click" />


                            <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3"  HorizontalAlignment="Right" Margin="5,0,3,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="22"/>
                                    <ColumnDefinition Width="22"/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>

                                <Button x:Name="btnPlayFrontPage" Grid.Column="0" Padding="0,0,0,0" Width="20" Height="20" Background="Transparent" BorderThickness="0" VerticalContentAlignment="Center" VerticalAlignment="Center" ToolTip="Play" IsEnabled="False"  Click="btnPlayFrontPage_Click" >
                                    <Image x:Name="imgBtnPlayPauseFrontPage"  Source="iconos/mplay.png" Margin="2" VerticalAlignment="Center" HorizontalAlignment="Center" Stretch="UniformToFill"/>
                                </Button>

                                <Button x:Name="btnStopFrontPage" Grid.Column="1" Padding="0,0,0,0"  Width="20" Height="20" Background="Transparent" BorderThickness="0" VerticalContentAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" HorizontalAlignment="Center" ToolTip="Stop" IsEnabled="False" Click="btnStopFrontPage_Click" >
                                    <Image Source="iconos/mstop.png" Margin="2" VerticalAlignment="Center" HorizontalAlignment="Center" Stretch="UniformToFill"/>
                                </Button>
                                <Label x:Name="lblStatusMusic" Grid.Column="2" Height="20" Width="77" HorizontalContentAlignment="Left" VerticalAlignment="Center" VerticalContentAlignment="Center" BorderBrush="Black" BorderThickness="0.5" Padding="3,0,0,0" />



                            </Grid>

                        </Grid>

                    </Grid>
                </Border>

                <!--#endregion-->

                <!-- Region pagePanel -->

                <Border x:Name="brdPagePanel" Background="WhiteSmoke" Visibility="Collapsed" >
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="35"/>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="10"/>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Row="0" Grid.Column="0" Background="#E5E7E9" Grid.ColumnSpan="3"  >
                            <Border  BorderThickness="1" BorderBrush="DarkGray" >
                                <Label x:Name="lblPage" Content="Página X" Padding="0" Margin="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="16" />
                            </Border>
                        </Grid>

                        <!--<Separator Grid.Row="1" Grid.Column="1" BorderThickness="1" BorderBrush="DarkGray"/> -->

                        <Grid Grid.Row="2" Grid.Column="1" Margin="0,10,0,10" >

                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="85" />
                                <ColumnDefinition Width="*"  MinWidth="110"/>
                                <ColumnDefinition Width="25" />
                            </Grid.ColumnDefinitions>

                            <Label x:Name="lblBackgroundPage" Grid.Row="0" Grid.Column="0" Padding="0" Content="Fondo:" Margin="0,0,0,0" HorizontalContentAlignment="Left" HorizontalAlignment="Left" VerticalAlignment="Center" VerticalContentAlignment="Center" Height="20"/>

                            <RadioButton x:Name="rdbImagePage" Grid.Row="1" Grid.Column="0" GroupName="grpBackgroundPage" Content="Imagen" Margin="15,5,5,5" HorizontalAlignment="Left" VerticalAlignment="Center" Checked="rdbImagePage_Checked"  />
                            <RadioButton x:Name="rdbColorPage" Grid.Row="2" Grid.Column="0" GroupName="grpBackgroundPage" Content="Color" Margin="15,5,0,5" HorizontalAlignment="Left" VerticalAlignment="Center" Checked="rdbColorPage_Checked" />

                            <TextBox  x:Name="txtBackgroundImagePage" Grid.Row="1" Grid.Column="1" Margin="5,0,3,0" Height="20" VerticalAlignment="Center" IsEnabled="False" />

                            <Button x:Name ="btnBackgroundImagePage" Grid.Row="1" Grid.Column="2" Height="20" Content="..."  Margin="2,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" Width="20" IsEnabled="False" Click="btnBackgroundImagePage_Click_1"  />

                            <TextBox  x:Name="txtBackgroundColorPage" Grid.Row="2" Grid.Column="1" Margin="5,0,3,0" Height="20" VerticalAlignment="Center" IsEnabled="False" />

                            <Button x:Name ="btnBackgroundColorPage" Grid.Row="2" Grid.Column="2" Height="20" Content="..."  Margin="2,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" Width="20" IsEnabled="False" Click="btnBackgroundColorPage_Click"   />

                        </Grid>



                        <Separator Grid.Row="3" Grid.Column="1" BorderThickness="1" BorderBrush="DarkGray"/>


                        <Grid Grid.Row="4" Grid.Column="1" Margin="0,10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="85" />
                                <ColumnDefinition Width="*"  MinWidth="100"/>
                                <ColumnDefinition Width="25" />
                            </Grid.ColumnDefinitions>

                            <Label x:Name="lblMusicPage" Grid.Row="0" Grid.Column="0" Padding="0" Content="Música:" Margin="0,2" HorizontalContentAlignment="Left" HorizontalAlignment="Left" VerticalAlignment="Center" VerticalContentAlignment="Center" Height="20"/>
                            <TextBox  x:Name="txtMusicPage" Grid.Row="0" Grid.Column="1" Margin="5,0,3,0" Height="20" VerticalAlignment="Center" IsEnabled="False"/>
                            <Button  x:Name="btnMusicPage" Grid.Row="0" Grid.Column="2" Height="20" Content="..."  Margin="0,2,0,2" VerticalAlignment="Center" HorizontalAlignment="Center" Width="20" IsEnabled="False" Click="btnMusicPage_Click" />


                            <Grid Grid.Row="2" Grid.Column="1"  Grid.ColumnSpan="3" HorizontalAlignment="Right" Margin="5,0,3,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="22"/>
                                    <ColumnDefinition Width="22"/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>

                                <Button x:Name="btnPlayPage" Grid.Column="0" Padding="0,0,0,0" Width="20" Height="20" Background="Transparent" BorderThickness="0" VerticalContentAlignment="Center" VerticalAlignment="Center" ToolTip="Play" IsEnabled="False" Click="btnPlayPage_Click" >
                                    <Image x:Name ="imgBtnPlayPausePage" Source="iconos/mplay.png" Margin="2" VerticalAlignment="Center" HorizontalAlignment="Center" Stretch="UniformToFill"/>
                                </Button>

                                <Button x:Name="btnStopPage" Grid.Column="1" Padding="0,0,0,0"  Width="20" Height="20" Background="Transparent" BorderThickness="0" VerticalContentAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" HorizontalAlignment="Center" ToolTip="Stop" IsEnabled="False" Click="btnStopPage_Click" >
                                    <Image Source="iconos/mstop.png" Margin="2" VerticalAlignment="Center" HorizontalAlignment="Center" Stretch="UniformToFill"/>
                                </Button>

                                <Label x:Name="lblStatusMusicPage" Grid.Column="2" Height="20" Width="77" HorizontalContentAlignment="Left" VerticalAlignment="Center" VerticalContentAlignment="Center" BorderBrush="Black" BorderThickness="0.5" Padding="3,0,0,0" />



                            </Grid>


                        </Grid>

                        <Separator Grid.Row="5" Grid.Column="1" BorderThickness="1" BorderBrush="DarkGray"/>

                        <Grid Grid.Row="6" Grid.Column="1" Margin="0,10,0,10" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.5*"/>
                                <ColumnDefinition Width="30"/>
                                <ColumnDefinition Width="30"/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0"  Content="Texto que leer: " Margin="0" HorizontalAlignment="Left" VerticalAlignment="Center" />
                            <Button x:Name="btnReproduce" Grid.Column="1" Padding="0,0,0,0" Width="20" Height="20" Background="Transparent" BorderThickness="0" VerticalContentAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center" ToolTip="Play" IsEnabled="False" Click="btnReproduce_Click">
                                <Image x:Name ="imgBtnReproduce" Source="iconos/mplay.png" Margin="2" VerticalAlignment="Center" HorizontalAlignment="Center" Stretch="UniformToFill"/>
                            </Button>

                            <Button x:Name="btnStop" Grid.Column="2" Padding="0,0,0,0" Width="20" Height="20" Background="Transparent" BorderThickness="0" VerticalContentAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center" ToolTip="Play" IsEnabled="False" Click="btnStop_Click"  >
                                <Image x:Name ="imgBtnStop" Source="iconos/mstop.png" Margin="2" VerticalAlignment="Center" HorizontalAlignment="Center" Stretch="UniformToFill"/>
                            </Button>
                        </Grid>

                        <!-- <Grid Grid.Row="7" Grid.Column="1" Margin="0,10" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.59*"/>
                                <ColumnDefinition Width="0.3*"/>
                                <ColumnDefinition Width="0.11*"/>

                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0"  Content="Tiempo escuchar audio: " Margin="0" HorizontalAlignment="Left" VerticalAlignment="Center" />
                            <TextBox x:Name="txtDuration" Grid.Column="1" Height="20" IsEnabled="False" Text="1" />
                            <Label Grid.Column="2"  Content="seg " Margin="0" HorizontalAlignment="Left" VerticalAlignment="Center" />
                        </Grid>-->

                        <Grid Grid.Row="8" Grid.Column="1">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="10" />
                                <ColumnDefinition Width="25" />
                                <ColumnDefinition Width="0.4*" />
                                <ColumnDefinition Width="5" />
                                <ColumnDefinition Width="25" />
                                <ColumnDefinition Width="0.4*" />
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="0.2*" />
                                <RowDefinition Height="0.2*" />
                                <RowDefinition Height="0.2*" />
                                <RowDefinition Height="0.2*" />
                                <RowDefinition Height="0.2*" />
                            </Grid.RowDefinitions>

                            <Label  Grid.Row="0" Grid.Column="1" Content="1:" />
                            <Label  Grid.Row="1" Grid.Column="1" Content="2:" />
